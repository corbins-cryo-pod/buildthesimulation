---
import NerveHero from "../components/NerveHero.astro";

const {
  pageTitle,
  subtitle,
  description =
    "A living blueprint for building interactive simulations of neural systems — from peripheral nerve to cortex.",
  withHero = false,
} = Astro.props;

const siteTitle = "Build the Simulation";
const fullTitle = pageTitle ? `${pageTitle} | ${siteTitle}` : siteTitle;

const pathname = Astro.url?.pathname ?? "/";

// Display title can be different from <title>
const displayTitle = pathname === "/" ? "HOW TO BUILD THE SIMULATION" : siteTitle;

const links = [
  { href: "/", label: "Home" },
  { href: "/news", label: "News" },
  { href: "/articles", label: "Articles" },
  { href: "/ideas", label: "Ideas" },
  { href: "/simulations", label: "Simulations" },
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.ico" sizes="any" />
    <link rel="icon" type="image/png" href="/favicon-32.png" sizes="32x32" />
    <link rel="icon" type="image/png" href="/favicon-16.png" sizes="16x16" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" sizes="180x180" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />
    <title>{fullTitle}</title>
    <meta name="description" content={description} />
  </head>

  <body>
    {withHero ? <NerveHero /> : null}

    <main class="wrap">
      <header class="hero">
        <div class="brand">
          <a class="mark" aria-label="Home" href="/"></a>
          <div class="titleblock">
            {pageTitle ? <h1 class="pageTitle">{pageTitle}</h1> : <h1>{displayTitle}</h1>}
            <p class="sub">
              {subtitle ??
                "A living blueprint for simulating neural systems — and designing the interfaces that connect to them."}
            </p>
          </div>
        </div>

        <nav class="nav" aria-label="Primary">
          {links.map((l) => {
            const active = l.href === "/" ? pathname === "/" : pathname.startsWith(l.href);
            return (
              <a class={`pill ${active ? "active" : ""}`} href={l.href}>{l.label}</a>
            );
          })}
        </nav>
      </header>

      <slot />

      <footer class="foot">
        <span>© {new Date().getFullYear()} buildthesimulation.com</span>
      </footer>
    </main>
  </body>
</html>

<style>
  :global(body) {
    margin: 0;
    font-family: "Times New Roman", Times, serif;
    font-size: 20px;
    color: rgba(10, 10, 12, 0.86);
    background: #f6f1e6; /* paper */
  }

  /* subtle paper grain */
  :global(body::before) {
    content: "";
    position: fixed;
    inset: 0;
    pointer-events: none;
    opacity: 0.045;
    mix-blend-mode: multiply;
    background-image:
      repeating-linear-gradient(0deg, rgba(0, 0, 0, 0.35) 0px, rgba(0, 0, 0, 0.35) 1px, transparent 1px, transparent 3px),
      repeating-linear-gradient(90deg, rgba(0, 0, 0, 0.25) 0px, rgba(0, 0, 0, 0.25) 1px, transparent 1px, transparent 4px);
    filter: blur(0.2px);
    z-index: 0;
  }

  /* keep UI above the 3D canvas */
  .wrap {
    position: relative;
    z-index: 1;
    max-width: 1120px;
    margin: 0 auto;
    padding: 60px 24px 44px;
  }

  .hero {
    display: flex;
    flex-direction: column;
    gap: 18px;
    margin-bottom: 18px;
    padding-bottom: 18px;
    border-bottom: 1px solid rgba(10, 10, 12, 0.14);
  }

  .brand {
    display: flex;
    gap: 14px;
    align-items: center;
  }

  .mark {
    width: 44px;
    height: 44px;
    border-radius: 12px;
    background: rgba(20, 20, 22, 0.9);
    box-shadow: 0 10px 22px rgba(0, 0, 0, 0.12);
    display: inline-grid;
    place-items: center;
    flex: 0 0 auto;
    position: relative;
    overflow: hidden;
  }

  /* simple print-stamp monogram */
  .mark::after {
    content: "BTS";
    font-family: "Times New Roman", Times, serif;
    font-weight: 700;
    font-size: 12px;
    letter-spacing: 0.18em;
    color: rgba(246, 241, 230, 0.95);
    transform: translateX(0.09em);
  }

  .mark:hover {
    filter: brightness(1.05);
  }

  h1 {
    margin: 0;
    font-size: 54px;
    letter-spacing: -0.005em;
    line-height: 1.02;
  }

  .pageTitle {
    font-size: 46px;
  }

  .sub {
    margin: 10px 0 0;
    font-size: 20px;
    opacity: 0.78;
    max-width: 78ch;
  }

  .nav {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
  }

  .pill {
    display: inline-flex;
    padding: 10px 14px;
    border-radius: 999px;
    border: 1px solid rgba(10, 10, 12, 0.16);
    text-decoration: none;
    color: inherit;
    background: rgba(255, 255, 255, 0.18);
    transition: transform 120ms ease, border-color 120ms ease, background 120ms ease;
  }

  .pill:hover {
    border-color: rgba(10, 10, 12, 0.28);
    transform: translateY(-1px);
    background: rgba(255, 255, 255, 0.5);
  }

  .pill.active {
    border-color: rgba(10, 10, 12, 0.35);
    background: rgba(255, 255, 255, 0.65);
  }

  /* Expandable definition pills (use <details class="def"> in Markdown) */
  :global(details.def) {
    margin: 12px 0;
    border-radius: 14px;
    border: 1px solid rgba(0, 0, 0, 0.12);
    background: rgba(255, 255, 255, 0.65);
    backdrop-filter: blur(10px);
    overflow: hidden;
  }

  :global(details.def summary) {
    cursor: pointer;
    list-style: none;
    padding: 10px 12px;
    font-weight: 600;
  }

  :global(details.def summary::-webkit-details-marker) {
    display: none;
  }

  :global(details.def .defBody) {
    padding: 0 12px 12px;
    opacity: 0.9;
    line-height: 1.65;
  }

  .foot {
    margin-top: 28px;
    padding-top: 16px;
    opacity: 0.62;
    font-size: 14px;
    border-top: 1px solid rgba(10, 10, 12, 0.14);
  }

  @media (max-width: 680px) {
    :global(body) { font-size: 18px; }
    h1 { font-size: 38px; }
    .pageTitle { font-size: 32px; }
  }
</style>
