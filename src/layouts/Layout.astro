---
import NerveHero from "../components/NerveHero.astro";

const {
  pageTitle,
  subtitle,
  description =
    "A living blueprint for building interactive simulations of neural systems — from peripheral nerve to cortex.",
  withHero = false,
} = Astro.props;

const siteTitle = "Build the Simulation";
const fullTitle = pageTitle ? `${pageTitle} | ${siteTitle}` : siteTitle;

const pathname = Astro.url?.pathname ?? "/";

// Display title can be different from <title>
const displayTitle = pathname === "/" ? "HOW TO BUILD THE SIMULATION" : siteTitle;

const links = [
  { href: "/", label: "Home" },
  { href: "/news", label: "News" },
  { href: "/articles", label: "Articles" },
  { href: "/ideas", label: "Ideas" },
  { href: "/demos", label: "Demos" },
  { href: "/sim", label: "Simulation" },
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{fullTitle}</title>
    <meta name="description" content={description} />
  </head>

  <body>
    {withHero ? <NerveHero /> : null}

    <main class="wrap">
      <header class="hero">
        <div class="brand">
          <a class="mark" aria-label="Home" href="/"></a>
          <div class="titleblock">
            {pageTitle ? <h1 class="pageTitle">{pageTitle}</h1> : <h1>{displayTitle}</h1>}
            <p class="sub">
              {subtitle ??
                "A living blueprint for simulating neural systems — and designing the interfaces that connect to them."}
            </p>
          </div>
        </div>

        <nav class="nav" aria-label="Primary">
          {links.map((l) => {
            const active = l.href === "/" ? pathname === "/" : pathname.startsWith(l.href);
            return (
              <a class={`pill ${active ? "active" : ""}`} href={l.href}>{l.label}</a>
            );
          })}
        </nav>
      </header>

      <slot />

      <footer class="foot">
        <span>© {new Date().getFullYear()} buildthesimulation.com</span>
      </footer>
    </main>
  </body>
</html>

<style>
  :global(body) {
    margin: 0;
    font-family: "Times New Roman", Times, serif;
    color: rgba(10, 10, 12, 0.88);
    background: #f6f1e6; /* paper */
  }

  /* keep UI above the 3D canvas */
  .wrap {
    position: relative;
    z-index: 1;
    max-width: 1040px;
    margin: 0 auto;
    padding: 54px 22px 40px;
  }

  .hero {
    display: flex;
    flex-direction: column;
    gap: 18px;
    margin-bottom: 22px;
  }

  .brand {
    display: flex;
    gap: 14px;
    align-items: center;
  }

  .mark {
    width: 44px;
    height: 44px;
    border-radius: 14px;
    background: linear-gradient(135deg, rgba(20, 20, 22, 0.9), rgba(20, 20, 22, 0.6));
    box-shadow: 0 10px 22px rgba(0, 0, 0, 0.12);
    display: inline-block;
    flex: 0 0 auto;
  }

  h1 {
    margin: 0;
    font-size: 52px;
    letter-spacing: -0.01em;
    line-height: 1.02;
  }

  .pageTitle {
    font-size: 44px;
  }

  .sub {
    margin: 10px 0 0;
    font-size: 19px;
    opacity: 0.78;
    max-width: 74ch;
  }

  .nav {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
  }

  .pill {
    display: inline-flex;
    padding: 10px 13px;
    border-radius: 999px;
    border: 1px solid rgba(10, 10, 12, 0.14);
    text-decoration: none;
    color: inherit;
    background: rgba(255, 255, 255, 0.35);
    transition: transform 120ms ease, border-color 120ms ease, background 120ms ease;
  }

  .pill:hover {
    border-color: rgba(10, 10, 12, 0.28);
    transform: translateY(-1px);
    background: rgba(255, 255, 255, 0.5);
  }

  .pill.active {
    border-color: rgba(10, 10, 12, 0.35);
    background: rgba(255, 255, 255, 0.65);
  }

  /* Expandable definition pills (use <details class="def"> in Markdown) */
  :global(details.def) {
    margin: 12px 0;
    border-radius: 14px;
    border: 1px solid rgba(0, 0, 0, 0.12);
    background: rgba(255, 255, 255, 0.65);
    backdrop-filter: blur(10px);
    overflow: hidden;
  }

  :global(details.def summary) {
    cursor: pointer;
    list-style: none;
    padding: 10px 12px;
    font-weight: 600;
  }

  :global(details.def summary::-webkit-details-marker) {
    display: none;
  }

  :global(details.def .defBody) {
    padding: 0 12px 12px;
    opacity: 0.9;
    line-height: 1.65;
  }

  .foot {
    margin-top: 22px;
    padding-top: 14px;
    opacity: 0.65;
    font-size: 13px;
  }

  @media (max-width: 680px) {
    h1 {
      font-size: 34px;
    }
    .pageTitle {
      font-size: 30px;
    }
  }
</style>
