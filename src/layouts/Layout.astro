---
import NerveHero from "../components/NerveHero.astro";
import { getCollection } from "astro:content";

const {
  pageTitle,
  subtitle,
  description =
    "A living blueprint for building interactive simulations of neural systems — from peripheral nerve to cortex.",
  withHero = false,
} = Astro.props;

const siteTitle = "Build the Simulation";
const fullTitle = pageTitle ? `${pageTitle} | ${siteTitle}` : siteTitle;

const pathname = Astro.url?.pathname ?? "/";

// Display title can be different from <title>
const displayTitle = pathname === "/" ? "HOW TO BUILD THE SIMULATION" : siteTitle;

// Build dropdown menus (a mini table of contents) for quick navigation.
const articles = (await getCollection("articles"))
  .filter((p) => !p.data.draft)
  .sort((a, b) => a.data.order - b.data.order);

const companies = (await getCollection("companies"))
  .filter((p) => !p.data.draft)
  .sort((a, b) => a.data.order - b.data.order);

const designs = (await getCollection("designs"))
  .filter((p) => !p.data.draft)
  .sort((a, b) => a.data.order - b.data.order);

const news = (await getCollection("news"))
  .filter((p) => !p.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const ideas = (await getCollection("ideas"))
  .filter((p) => !p.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

function stripPrefix(title) {
  return title.replace(/^\d+\s*—\s*/, "");
}
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.ico" sizes="any" />
    <link rel="icon" type="image/png" href="/favicon-32.png" sizes="32x32" />
    <link rel="icon" type="image/png" href="/favicon-16.png" sizes="16x16" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" sizes="180x180" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />

    <script>
      // Theme: default to system preference, allow manual override via localStorage.
      (() => {
        try {
          const saved = localStorage.getItem("bts_theme");
          const prefersDark = window.matchMedia && window.matchMedia("(prefers-color-scheme: dark)").matches;
          const theme = saved === "light" || saved === "dark" ? saved : prefersDark ? "dark" : "light";
          document.documentElement.dataset.theme = theme;
        } catch {}
      })();
    </script>

    <title>{fullTitle}</title>
    <meta name="description" content={description} />
  </head>

  <body>
    {withHero ? <NerveHero /> : null}

    <main class="wrap">
      <header class="hero">
        <div class="brand">
          <a class="mark" aria-label="Home" href="/"></a>
          <div class="titleblock">
            {pageTitle ? <h1 class="pageTitle">{pageTitle}</h1> : <h1 class={pathname === "/" ? "homeTitle" : undefined}>{displayTitle}</h1>}
            <p class="sub">
              {subtitle ??
                "A living blueprint for simulating neural systems — and designing the interfaces that connect to them."}
            </p>
          </div>
        </div>

        <nav class="nav" aria-label="Primary">
          <a class={`pill ${pathname === "/" ? "active" : ""}`} href="/">Home</a>

          <details class={`navDrop ${pathname.startsWith("/news") ? "active" : ""}`}>
            <summary class="pill">News</summary>
            <div class="menu" role="menu">
              <a class="menuItem" href="/news">All news →</a>
              <div class="menuSep"></div>
              {news.slice(0, 30).map((p) => (
                <a class="menuItem" href={`/news/${p.slug}/`}>{p.data.title}</a>
              ))}
            </div>
          </details>

          <details class={`navDrop ${pathname.startsWith("/articles") ? "active" : ""}`}>
            <summary class="pill">Articles</summary>
            <div class="menu" role="menu">
              <a class="menuItem" href="/articles">All articles →</a>
              <div class="menuSep"></div>
              {articles.map((p) => (
                <a class="menuItem" href={`/articles/${p.slug}/`}>
                  {String(p.data.order).padStart(2, "0")} — {stripPrefix(p.data.title)}
                </a>
              ))}
            </div>
          </details>

          <details class={`navDrop ${pathname.startsWith("/companies") ? "active" : ""}`}>
            <summary class="pill">BCI Atlas</summary>
            <div class="menu" role="menu">
              <a class="menuItem" href="/companies">Directory →</a>
              <a class="menuItem" href="/companies/map/">Atlas map →</a>
              <div class="menuSep"></div>
              {companies.map((p) => (
                <a class="menuItem" href={`/companies/${p.slug}/`}>
                  {String(p.data.order).padStart(2, "0")} — {stripPrefix(p.data.title)}
                </a>
              ))}
            </div>
          </details>

          <details class={`navDrop ${pathname.startsWith("/designs") || pathname.startsWith("/devices") ? "active" : ""}`}>
            <summary class="pill">Devices</summary>
            <div class="menu" role="menu">
              <a class="menuItem" href="/devices">All devices →</a>
              <div class="menuSep"></div>
              {designs.map((p) => (
                <a class="menuItem" href={`/devices/${p.slug}/`}>
                  {String(p.data.order).padStart(2, "0")} — {stripPrefix(p.data.title)}
                </a>
              ))}
            </div>
          </details>

          <details class={`navDrop ${pathname.startsWith("/ideas") ? "active" : ""}`}>
            <summary class="pill">Ideas</summary>
            <div class="menu" role="menu">
              <a class="menuItem" href="/ideas">All ideas →</a>
              <div class="menuSep"></div>
              {ideas.slice(0, 30).map((p) => (
                <a class="menuItem" href={`/ideas/${p.slug}/`}>
                  {p.data.title}
                </a>
              ))}
            </div>
          </details>

          <details class={`navDrop ${pathname.startsWith("/sim") || pathname.startsWith("/simulations") ? "active" : ""}`}>
            <summary class="pill">Simulations</summary>
            <div class="menu" role="menu">
              <a class="menuItem" href="/simulations">All simulations →</a>
              <div class="menuSep"></div>
              <a class="menuItem" href="/sim">Nerve cross-section sandbox</a>
              <a class="menuItem" href="/simulations/cortex-slab/">Cortex slab (3D)</a>
            </div>
          </details>

          <button id="themeToggle" class="pill" type="button" aria-label="Toggle dark mode" title="Toggle dark mode">
            Theme
          </button>
        </nav>

        <script>
          // Wire up theme toggle + hoverable nav dropdowns after markup exists.
          (() => {
            try {
              // Theme toggle
              const btn = document.getElementById("themeToggle");
              if (btn) {
                const setLabel = (theme) => {
                  btn.textContent = theme === "dark" ? "Light" : "Dark";
                  btn.setAttribute("aria-pressed", theme === "dark" ? "true" : "false");
                };

                const getTheme = () => document.documentElement.dataset.theme || "light";
                setLabel(getTheme());

                btn.addEventListener("click", () => {
                  const next = getTheme() === "dark" ? "light" : "dark";
                  document.documentElement.dataset.theme = next;
                  localStorage.setItem("bts_theme", next);
                  setLabel(next);
                });
              }

              const drops = Array.from(document.querySelectorAll("details.navDrop"));
              const isTouchLike = window.matchMedia && window.matchMedia("(hover: none)").matches;

              const closeAll = (except = null) => {
                for (const d of drops) {
                  if (except && d === except) continue;
                  d.open = false;
                }
              };

              for (const d of drops) {
                let closeTimer = null;

                const open = () => {
                  if (closeTimer) {
                    clearTimeout(closeTimer);
                    closeTimer = null;
                  }
                  d.open = true;
                };

                const closeSoon = () => {
                  if (closeTimer) clearTimeout(closeTimer);
                  closeTimer = setTimeout(() => {
                    d.open = false;
                  }, 140);
                };

                // Desktop/hover behavior
                d.addEventListener("mouseenter", () => {
                  if (isTouchLike) return;
                  closeAll(d);
                  open();
                });
                d.addEventListener("mouseleave", () => {
                  if (isTouchLike) return;
                  closeSoon();
                });

                // Keyboard accessibility: keep it open while focused inside.
                d.addEventListener("focusin", () => {
                  closeAll(d);
                  open();
                });
                d.addEventListener("focusout", () => {
                  if (isTouchLike) return;
                  closeSoon();
                });

                // Touch/mobile behavior: tap to toggle, tap outside to close.
                const summary = d.querySelector("summary");
                if (summary) {
                  summary.addEventListener("click", (e) => {
                    if (!isTouchLike) return; // allow native click on desktop
                    e.preventDefault();
                    e.stopPropagation();
                    const next = !d.open;
                    closeAll(d);
                    d.open = next;
                  });
                }

                // When a menu item is tapped, close all dropdowns.
                d.addEventListener("click", (e) => {
                  if (!isTouchLike) return;
                  const t = e.target;
                  if (t && t.closest && t.closest(".menuItem")) {
                    closeAll();
                  }
                });
              }

              // Tap/click outside closes all (use capture so it runs early).
              document.addEventListener(
                "click",
                (e) => {
                  if (!isTouchLike) return;
                  const t = e.target;
                  if (t && t.closest && t.closest("details.navDrop")) return;
                  closeAll();
                },
                true
              );
            } catch {}
          })();
        </script>
      </header>

      <slot />

      <footer class="foot">
        <span>© {new Date().getFullYear()} buildthesimulation.com</span>
      </footer>
    </main>
  </body>
</html>

<style>
  @font-face {
    font-family: "Newston";
    src: url("/fonts/newston/Newston-Regular.ttf") format("truetype"),
         url("/fonts/newston/Newston-Regular.otf") format("opentype");
    font-weight: 400;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: "Bodoni MT Compressed";
    src: url("/fonts/bodoni/BodoniMT-Compressed.ttf") format("truetype");
    font-weight: 400;
    font-style: normal;
    font-display: swap;
  }

  :global(:root) {
    /* Light theme (default) */
    --bg: #f6f1e6; /* paper */
    --text: rgba(10, 10, 12, 0.86);
    --muted: rgba(10, 10, 12, 0.72);

    --panel: rgba(255, 255, 255, 0.22);
    --panelStrong: rgba(255, 255, 255, 0.65);
    --panelHover: rgba(255, 255, 255, 0.50);

    --border: rgba(10, 10, 12, 0.14);
    --borderStrong: rgba(10, 10, 12, 0.28);

    --shadow: rgba(0, 0, 0, 0.14);
    --menuBg: rgba(255, 255, 255, 0.92);

    --grainOpacity: 0.045;
    --grainBlend: multiply;
  }

  :global(html[data-theme="dark"]) {
    /* Dark theme */
    --bg: #0f1114;
    --text: rgba(245, 242, 236, 0.88);
    --muted: rgba(245, 242, 236, 0.68);

    --panel: rgba(255, 255, 255, 0.06);
    --panelStrong: rgba(255, 255, 255, 0.10);
    --panelHover: rgba(255, 255, 255, 0.12);

    --border: rgba(245, 242, 236, 0.14);
    --borderStrong: rgba(245, 242, 236, 0.26);

    --shadow: rgba(0, 0, 0, 0.45);
    --menuBg: rgba(18, 20, 24, 0.96);

    --grainOpacity: 0.035;
    --grainBlend: overlay;
  }

  :global(body) {
    margin: 0;
    font-family: "Bodoni MT Compressed", "Bodoni MT", "Times New Roman", serif;
    font-size: 22px;
    line-height: 1.34;
    color: var(--text);
    background: var(--bg);
  }

  :global(strong),
  :global(b) {
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.02em;
  }

  :global(h1),
  :global(h2),
  :global(h3),
  :global(h4),
  :global(h5),
  :global(h6) {
    font-weight: 400;
  }

  :global(p),
  :global(li) {
    line-height: 1.38;
  }

  /* subtle paper grain */
  :global(body::before) {
    content: "";
    position: fixed;
    inset: 0;
    pointer-events: none;
    opacity: var(--grainOpacity);
    mix-blend-mode: var(--grainBlend);
    background-image:
      repeating-linear-gradient(0deg, rgba(0, 0, 0, 0.35) 0px, rgba(0, 0, 0, 0.35) 1px, transparent 1px, transparent 3px),
      repeating-linear-gradient(90deg, rgba(0, 0, 0, 0.25) 0px, rgba(0, 0, 0, 0.25) 1px, transparent 1px, transparent 4px);
    filter: blur(0.2px);
    z-index: 0;
  }

  /* keep UI above the 3D canvas */
  .wrap {
    position: relative;
    z-index: 1;
    max-width: 1120px;
    margin: 0 auto;
    padding: 60px 24px 44px;
  }

  .hero {
    display: flex;
    flex-direction: column;
    gap: 18px;
    margin-bottom: 18px;
    padding-bottom: 18px;
    border-bottom: 1px solid var(--border);
  }

  .brand {
    display: flex;
    gap: 14px;
    align-items: center;
  }

  .mark {
    width: 44px;
    height: 44px;
    border-radius: 12px;
    background: rgba(20, 20, 22, 0.9);
    box-shadow: 0 10px 22px rgba(0, 0, 0, 0.12);
    display: inline-grid;
    place-items: center;
    flex: 0 0 auto;
    position: relative;
    overflow: hidden;
  }

  /* simple print-stamp monogram */
  .mark::after {
    content: "BTS";
    font-family: "Bodoni MT Compressed", "Bodoni MT", "Times New Roman", serif;
    font-weight: 700;
    font-size: 12px;
    letter-spacing: 0.18em;
    color: rgba(246, 241, 230, 0.95);
    transform: translateX(0.09em);
  }

  .mark:hover {
    filter: brightness(1.05);
  }

  h1 {
    margin: 0;
    font-size: 54px;
    font-weight: 400;
    letter-spacing: -0.005em;
    line-height: 1.02;
  }

  .homeTitle {
    font-family: "Newston", "Times New Roman", Times, serif;
  }

  .pageTitle {
    font-size: 46px;
    font-weight: 400;
  }

  .sub {
    margin: 10px 0 0;
    font-size: 20px;
    opacity: 0.78;
    max-width: 78ch;
  }

  .nav {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    align-items: center;
  }

  .pill {
    display: inline-flex;
    padding: 10px 14px;
    border-radius: 999px;
    border: 1px solid var(--border);
    text-decoration: none;
    color: inherit;
    background: var(--panel);
    transition: transform 120ms ease, border-color 120ms ease, background 120ms ease;
    user-select: none;
  }

  .pill:hover {
    border-color: var(--borderStrong);
    transform: translateY(-1px);
    background: var(--panelHover);
  }

  .pill.active {
    border-color: var(--borderStrong);
    background: var(--panelStrong);
  }

  /* Nav dropdowns (mini table-of-contents) */
  .navDrop {
    position: relative;
    margin: 0;
  }

  .navDrop summary {
    list-style: none;
    cursor: pointer;
  }

  .navDrop summary::-webkit-details-marker {
    display: none;
  }

  .navDrop.active > summary {
    border-color: var(--borderStrong);
    background: var(--panelStrong);
  }

  .navDrop:not([open]) .menu {
    display: none;
  }

  .menu {
    position: absolute;
    top: calc(100% + 8px);
    left: 0;
    min-width: 320px;
    max-width: 520px;
    max-height: min(60vh, 520px);
    overflow: auto;
    padding: 10px;
    border-radius: 14px;
    border: 1px solid var(--border);
    background: var(--menuBg);
    box-shadow: 0 12px 30px var(--shadow);
    z-index: 10;
  }

  .menuItem {
    display: block;
    padding: 8px 10px;
    border-radius: 10px;
    text-decoration: none;
    color: inherit;
    line-height: 1.25;
  }

  .menuItem:hover {
    background: rgba(0, 0, 0, 0.05);
  }

  .menuSep {
    height: 1px;
    margin: 8px 4px;
    background: rgba(10, 10, 12, 0.12);
  }

  @media (hover: hover) {
    .navDrop:hover > .menu {
      display: block;
    }
  }

  /* Expandable definition pills (use <details class="def"> in Markdown) */
  :global(details.def) {
    margin: 12px 0;
    border-radius: 14px;
    border: 1px solid rgba(0, 0, 0, 0.12);
    background: rgba(255, 255, 255, 0.65);
    backdrop-filter: blur(10px);
    overflow: hidden;
  }

  :global(details.def summary) {
    cursor: pointer;
    list-style: none;
    padding: 10px 12px;
    font-weight: 600;
  }

  :global(details.def summary::-webkit-details-marker) {
    display: none;
  }

  :global(details.def .defBody) {
    padding: 0 12px 12px;
    opacity: 0.9;
    line-height: 1.65;
  }

  .foot {
    margin-top: 28px;
    padding-top: 16px;
    opacity: 0.62;
    font-size: 14px;
    border-top: 1px solid var(--border);
  }

  @media (max-width: 680px) {
    :global(body) { font-size: 20px; }
    h1 { font-size: 38px; }
    .pageTitle { font-size: 32px; }
  }
</style>
