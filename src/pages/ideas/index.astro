---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";

const all = await getCollection("ideas");
const posts = all
  .filter((p) => !p.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<Layout pageTitle="Ideas" subtitle="Weekly updates on my work: lab notes, hypotheses, and next steps." description="Lab notes and ideas: weekly updates on buildthesimulation work.">
  <section class="card">
    <p class="muted">
      Think of this as the project’s lab notebook. News is the outside world; Ideas is what we’re building.
    </p>
  </section>

  <section class="list">
    {posts.length === 0 ? (
      <p class="muted">No published lab notes yet.</p>
    ) : (
      posts.map((p) => (
        <a class="item" href={`/ideas/${p.slug}/`}>
          <div class="top">
            <h2>{p.data.title}</h2>
            <time datetime={p.data.pubDate.toISOString()}>
              {p.data.pubDate.toLocaleDateString("en-US", { year: "numeric", month: "short", day: "numeric" })}
            </time>
          </div>
          {p.data.description ? <p class="desc">{p.data.description}</p> : null}
          {p.data.tags?.length ? <div class="tags">{p.data.tags.join(" · ")}</div> : null}
        </a>
      ))
    )}
  </section>
</Layout>

<style>
  .card {
    margin-top: 14px;
    padding: 22px 22px;
    border-radius: 16px;
    border: 1px solid var(--border);
    background: var(--panel);
  }

  .muted {
    opacity: 0.72;
    margin: 0;
  }

  .list {
    margin-top: 14px;
    display: grid;
    gap: 10px;
  }

  .item {
    display: block;
    padding: 16px;
    border-radius: 16px;
    border: 1px solid var(--border);
    background: var(--panel);
    color: inherit;
    text-decoration: none;
  }

  .item:hover {
    border-color: var(--borderStrong);
    transform: translateY(-1px);
    background: var(--panelHover);
  }

  .top {
    display: flex;
    justify-content: space-between;
    gap: 12px;
    align-items: baseline;
  }

  h2 {
    margin: 0;
    font-size: var(--title-card);
    font-weight: 400;
    line-height: 1.06;
  }

  time {
    opacity: 0.65;
    font-size: var(--text-meta);
    white-space: nowrap;
  }

  .desc {
    margin: 10px 0 0;
    opacity: 0.8;
    line-height: 1.7;
  }

  .tags {
    margin-top: 8px;
    opacity: 0.65;
    font-size: var(--text-meta);
  }
</style>
