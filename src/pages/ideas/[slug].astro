---
import Layout from "../../layouts/Layout.astro";
import { getCollection, render } from "astro:content";

export async function getStaticPaths() {
  const posts = await getCollection("ideas");
  return posts.filter((p) => !p.data.draft).map((p) => ({ params: { slug: p.slug }, props: { entry: p } }));
}

const { entry } = Astro.props;
const { Content } = await render(entry);

const subtitle = entry.data.description ?? "Lab notes and working ideas.";
---

<Layout pageTitle="Ideas" subtitle={subtitle} description={entry.data.description}>
  <article class="post">
    <header class="postHead">
      <h2 class="title">{entry.data.title}</h2>
      <div class="meta">
        <time datetime={entry.data.pubDate.toISOString()}>
          {entry.data.pubDate.toLocaleDateString("en-US", { year: "numeric", month: "short", day: "numeric" })}
        </time>
        {entry.data.tags?.length ? <span class="dot">·</span> : null}
        {entry.data.tags?.length ? <span class="tags">{entry.data.tags.join(" · ")}</span> : null}
      </div>
    </header>

    <section class="content">
      <Content />
    </section>
  </article>
</Layout>

<style>
  .post {
    padding: 26px;
    border-radius: 16px;
    border: 1px solid var(--border);
    background: var(--panel);
    max-width: 860px;
    margin: 0 auto;
  }

  .title {
    margin: 0;
    font-size: 1.2em;
    font-weight: 700;
  }

  .meta {
    margin-top: 8px;
    opacity: 0.72;
    font-size: 0.85em;
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    align-items: center;
  }

  .dot {
    opacity: 0.6;
  }

  .content :global(p) {
    line-height: 1.85;
    margin: 0.95em 0;
  }

  .content :global(h2) {
    margin: 1.2em 0 0.2em;
    font-size: 1.15em;
    font-weight: 700;
  }

  .content :global(a) {
    color: inherit;
    text-decoration-thickness: 1px;
    text-underline-offset: 2px;
  }
</style>
