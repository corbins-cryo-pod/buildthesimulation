---
import Layout from "../../layouts/Layout.astro";
import { getCollection, render } from "astro:content";

export async function getStaticPaths() {
  const posts = await getCollection("designs");
  return posts.filter((p) => !p.data.draft).map((p) => ({ params: { slug: p.slug }, props: { entry: p } }));
}

const { entry } = Astro.props;
const { Content } = await render(entry);

const subtitle = entry.data.description ?? "BCI device entry.";
const titleNoPrefix = entry.data.title.replace(/^\d+\s*—\s*/, "");
---

<Layout pageTitle="Devices" subtitle={subtitle} description={entry.data.description}>
  <article class="post">
    <header class="postHead">
      <div class="kicker">Device — {entry.data.modality}</div>
      <h2 class="title">{titleNoPrefix}</h2>

      {entry.data.website ? (
        <p class="siteLink">
          <a class="siteBtn" href={entry.data.website} target="_blank" rel="noopener noreferrer">Official site →</a>
        </p>
      ) : null}

      {entry.data.tags?.length ? <div class="meta">{entry.data.tags.join(" · ")}</div> : null}
    </header>

    <section class="content">
      <Content />
    </section>
  </article>
</Layout>

<style>
  .post {
    padding: 26px 26px;
    border-radius: 16px;
    border: 1px solid var(--border);
    background: var(--panel);
    max-width: 860px;
  }

  :global(main.wrap) {
    display: flex;
    flex-direction: column;
  }

  :global(main.wrap) .post {
    align-self: center;
    width: 100%;
  }

  .kicker {
    opacity: 0.7;
    font-size: 12px;
    letter-spacing: 0.14em;
    text-transform: uppercase;
  }

  .title {
    margin: 6px 0 0;
    font-size: 26px;
    letter-spacing: -0.005em;
    line-height: 1.15;
  }

  .siteLink {
    margin: 12px 0 0;
    display: flex;
    gap: 10px;
    align-items: center;
    flex-wrap: wrap;
  }

  .siteBtn {
    display: inline-block;
    padding: 8px 12px;
    border-radius: 999px;
    border: 1px solid var(--border);
    background: var(--panelStrong);
    color: inherit;
    text-decoration: none;
    font-size: 13px;
    letter-spacing: 0.02em;
  }

  .siteBtn:hover {
    border-color: var(--borderStrong);
    background: var(--panelHover);
    transform: translateY(-1px);
  }

  .meta {
    margin-top: 8px;
    opacity: 0.72;
    font-size: 13px;
  }

  .content :global(p) {
    line-height: 1.85;
    margin: 0.95em 0;
  }

  .content :global(p:first-of-type) {
    font-size: 1.08em;
    line-height: 1.75;
  }

  .content :global(h2) {
    margin: 1.2em 0 0.2em;
    font-size: 1.15em;
    font-weight: 700;
    letter-spacing: 0;
  }

  .content :global(h3) {
    margin: 1em 0 0.2em;
    font-size: 1.05em;
    font-weight: 700;
  }
</style>
