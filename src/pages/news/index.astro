---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";

const all = await getCollection("news");
const posts = all
  .filter((p) => !p.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<Layout pageTitle="News" subtitle="Weekly BCI + neurotech updates (with commentary)." description="Weekly BCI + neurotech updates with links and personal commentary.">
  <section class="card">
    <p class="muted">
      New post each week. If you want this to feel like a “running column”, the home page will surface the latest entries.
    </p>
  </section>

  <section class="list">
    {posts.length === 0 ? (
      <p class="muted">No published posts yet. (Drafts exist in the repo.)</p>
    ) : (
      posts.map((p) => (
        <a class="item" href={`/news/${p.slug}/`}>
          <div class="top">
            <h2>{p.data.title}</h2>
            <time datetime={p.data.pubDate.toISOString()}>
              {p.data.pubDate.toLocaleDateString("en-US", { year: "numeric", month: "short", day: "numeric" })}
            </time>
          </div>
          {p.data.description ? <p class="desc">{p.data.description}</p> : null}
          {p.data.tags?.length ? (
            <div class="tags">
              {p.data.tags.map((t) => (
                <span class="tag">{t}</span>
              ))}
            </div>
          ) : null}
        </a>
      ))
    )}
  </section>
</Layout>

<style>
  .card {
    padding: 18px;
    border-radius: 18px;
    border: 1px solid var(--border);
    background: var(--panelStrong);
    backdrop-filter: blur(10px);
    margin-bottom: 14px;
  }

  .muted {
    opacity: 0.7;
    margin: 0;
  }

  .list {
    display: grid;
    gap: 12px;
  }

  .item {
    display: block;
    padding: 16px;
    border-radius: 18px;
    border: 1px solid var(--border);
    background: var(--panelStrong);
    backdrop-filter: blur(10px);
    color: inherit;
    text-decoration: none;
  }

  .item:hover {
    border-color: var(--borderStrong);
    transform: translateY(-1px);
    background: var(--panelHover);
  }

  .top {
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    gap: 12px;
  }

  h2 {
    margin: 0;
    font-size: var(--title-card);
    line-height: 1.06;
  }

  time {
    opacity: 0.65;
    font-size: var(--text-meta);
    white-space: nowrap;
  }

  .desc {
    margin: 8px 0 0;
    opacity: 0.82;
    line-height: 1.5;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
    margin-top: 10px;
  }

  .tag {
    font-size: 12px;
    opacity: 0.72;
    padding: 4px 8px;
    border-radius: 999px;
    border: 1px solid var(--border);
    background: var(--panel);
  }
</style>
