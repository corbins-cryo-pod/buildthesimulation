
---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";

const tiles = [
  {
    href: "/news",
    title: "News",
    desc: "Weekly BCI updates, startups, papers, and my take.",
  },
  {
    href: "/articles",
    title: "Articles",
    desc: "A guided sequence from fundamentals to future biohybrid interfaces.",
  },
  {
    href: "/ideas",
    title: "Ideas",
    desc: "Working notes, hypotheses, design sketches, and open questions.",
  },
  {
    href: "/demos",
    title: "Demos",
    desc: "Interactive models: fields, fibers, decoding, control, materials.",
  },
  {
    href: "/sim",
    title: "Simulation",
    desc: "The long-term sandbox: nerve + cortex cross-sections, implants, stimulation.",
  },
  {
    href: "https://github.com/corbins-cryo-pod/buildthesimulation",
    title: "Repository",
    desc: "Source code and roadmap.",
    external: true,
  },
];

const latestNews = (await getCollection("news"))
  .filter((p) => !p.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

<Layout withHero={true}>
  <section class="card">
    <h2>What this is</h2>
    <ul>
      <li><b>Weekly signal:</b> curated BCI + neurotech news with commentary.</li>
      <li><b>Deep articles:</b> neuroscience → interfaces → fabrication → future systems.</li>
      <li><b>Interactive demos:</b> models and simulations you can manipulate in-browser.</li>
      <li>
        <b>The sandbox:</b> a physics-based environment for exploring electrode designs and stimulation strategies.
      </li>
    </ul>
  </section>

  <section class="card">
    <div class="row">
      <h2>Latest news</h2>
      <a class="smallLink" href="/news">All news →</a>
    </div>

    {latestNews.length === 0 ? (
      <p class="muted">No published posts yet (drafts exist in the repo).</p>
    ) : (
      <div class="newsGrid">
        {latestNews.map((p) => (
          <a class="newsItem" href={`/news/${p.slug}/`}>
            <div class="newsTop">
              <div class="newsTitle">{p.data.title}</div>
              <time datetime={p.data.pubDate.toISOString()}>
                {p.data.pubDate.toLocaleDateString("en-US", { month: "short", day: "numeric", year: "numeric" })}
              </time>
            </div>
            {p.data.description ? <div class="muted">{p.data.description}</div> : null}
          </a>
        ))}
      </div>
    )}
  </section>

  <section class="grid">
    {tiles.map((t) => (
      <a class="tile" href={t.href} target={t.external ? "_blank" : undefined}>
        <h3>{t.title}</h3>
        <p>{t.desc}</p>
      </a>
    ))}
  </section>
</Layout>

<style>
  .card {
    margin-top: 14px;
    padding: 22px 22px;
    border-radius: 16px;
    border: 1px solid rgba(10, 10, 12, 0.14);
    background: rgba(255, 255, 255, 0.32);
  }

  .row {
    display: flex;
    justify-content: space-between;
    gap: 12px;
    align-items: baseline;
  }

  .smallLink {
    font-size: 13px;
    opacity: 0.75;
    color: inherit;
    text-decoration: none;
    white-space: nowrap;
  }

  .smallLink:hover {
    opacity: 0.95;
  }

  .muted {
    opacity: 0.7;
  }

  .card h2 {
    margin: 0 0 10px;
    font-size: 18px;
  }

  .card ul {
    margin: 0;
    padding-left: 18px;
    line-height: 1.65;
  }

  .newsGrid {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 10px;
  }

  .newsItem {
    display: block;
    padding: 12px;
    border-radius: 14px;
    border: 1px solid rgba(0, 0, 0, 0.1);
    background: rgba(255, 255, 255, 0.5);
    text-decoration: none;
    color: inherit;
  }

  .newsItem:hover {
    border-color: rgba(0, 0, 0, 0.22);
    transform: translateY(-1px);
  }

  .newsTop {
    display: flex;
    justify-content: space-between;
    gap: 10px;
    align-items: baseline;
    margin-bottom: 6px;
  }

  .newsTitle {
    font-weight: 600;
  }

  time {
    font-size: 12px;
    opacity: 0.65;
    white-space: nowrap;
  }

  .grid {
    margin-top: 18px;
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 12px;
  }

  .tile {
    padding: 16px;
    border-radius: 18px;
    border: 1px solid rgba(0, 0, 0, 0.1);
    background: rgba(255, 255, 255, 0.65);
    backdrop-filter: blur(10px);
    text-decoration: none;
    color: inherit;
  }

  .tile:hover {
    border-color: rgba(0, 0, 0, 0.22);
    transform: translateY(-1px);
  }

  .tile h3 {
    margin: 0 0 6px;
    font-size: 16px;
  }

  .tile p {
    margin: 0;
    opacity: 0.78;
    line-height: 1.45;
  }

  @media (max-width: 860px) {
    .newsGrid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 680px) {
    .grid {
      grid-template-columns: 1fr;
    }
  }
</style>
