---
import Layout from "../../layouts/Layout.astro";
import { getCollection, render } from "astro:content";

export async function getStaticPaths() {
  const posts = await getCollection("articles");
  return posts.filter((p) => !p.data.draft).map((p) => ({ params: { slug: p.slug }, props: { entry: p } }));
}

const { entry } = Astro.props;
const { Content } = await render(entry);

const subtitle = entry.data.description ?? "A guided sequence from fundamentals → future biohybrid interfaces.";
---

<Layout pageTitle="Articles" subtitle={subtitle} description={entry.data.description}>
  <article class="post">
    <header class="postHead">
      <div class="kicker">Article {String(entry.data.order).padStart(2, "0")}</div>
      <h2 class="title">{entry.data.title.replace(/^\d+\s*—\s*/, "")}</h2>
      {entry.data.tags?.length ? <div class="meta">{entry.data.tags.join(" · ")}</div> : null}
    </header>

    <section class="content">
      <Content />
    </section>
  </article>
</Layout>

<style>
  .post {
    padding: 26px 26px;
    border-radius: 16px;
    border: 1px solid var(--border);
    background: var(--panel);
    max-width: 860px;
  }

  /* keep long-form text centered and readable */
  :global(main.wrap) {
    display: flex;
    flex-direction: column;
  }

  :global(main.wrap) .post {
    align-self: center;
    width: 100%;
  }

  .kicker {
    opacity: 0.7;
    font-size: var(--text-kicker);
    letter-spacing: 0.14em;
    text-transform: uppercase;
  }

  .title {
    margin: 6px 0 0;
    font-size: var(--title-post);
    letter-spacing: -0.005em;
    line-height: 1.08;
  }

  .meta {
    margin-top: 8px;
    opacity: 0.72;
    font-size: var(--text-meta);
  }

  .content :global(p) {
    line-height: 1.85;
    margin: 0.95em 0;
  }

  /* lede paragraph */
  .content :global(p:first-of-type) {
    font-size: 1.08em;
    line-height: 1.75;
  }

  /* Textbook-ish headings: no bold, slightly larger for readability */
  .content :global(h2) {
    margin: 1.2em 0 0.2em;
    font-family: "Bodoni MT Compressed", "Bodoni MT", "Times New Roman", serif;
    font-size: 1em;
    font-weight: 400;
    letter-spacing: 0;
    line-height: 1.12;
  }

  .content :global(h3) {
    margin: 1.0em 0 0.2em;
    font-family: "Bodoni MT Compressed", "Bodoni MT", "Times New Roman", serif;
    font-size: 1em;
    font-weight: 400;
    line-height: 1.12;
  }

  .content :global(ul),
  .content :global(ol) {
    margin: 0.6em 0 0.9em;
    padding-left: 1.2em;
  }

  .content :global(li) {
    margin: 0.25em 0;
    line-height: 1.7;
  }

  .content :global(a) {
    color: inherit;
    text-decoration-thickness: 1px;
    text-underline-offset: 2px;
  }
</style>
