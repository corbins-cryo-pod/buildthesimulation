---
import Layout from "../../layouts/Layout.astro";

const sims = [
  {
    href: "/sim/",
    title: "Peripheral nerve cross-section",
    desc: "v0 sandbox: electrodes, pulse visualization, zoom/pan, export/import.",
  },
  {
    href: "/simulations/cortex-slab/",
    title: "Cortex slab (3D)",
    desc: "v0 sandbox: 3D slab + Utah array + toy spike raster and electrode traces.",
  },
];
---

<Layout pageTitle="Simulations" subtitle="Interactive simulation tools for neural interface exploration." description="Simulation launcher for buildthesimulation.">
  <section class="card">
    <p class="muted">This page launches the simulation tools and quick-start sandboxes.</p>
  </section>

  <section class="grid">
    {sims.map((s) => (
      <a class="tile" href={s.href}>
        <h2>{s.title}</h2>
        <p>{s.desc}</p>
      </a>
    ))}
  </section>
</Layout>

<style>
  .card {
    margin-top: 14px;
    padding: 22px 22px;
    border-radius: 16px;
    border: 1px solid var(--border);
    background: var(--panel);
  }

  .muted {
    opacity: 0.72;
    margin: 0;
  }

  .grid {
    margin-top: 14px;
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 12px;
  }

  .tile {
    display: block;
    padding: 18px;
    border-radius: 16px;
    border: 1px solid var(--border);
    background: var(--panel);
    color: inherit;
    text-decoration: none;
  }

  .tile:hover {
    border-color: var(--borderStrong);
    transform: translateY(-1px);
    background: var(--panelHover);
  }

  h2 {
    margin: 0 0 8px;
    font-size: 1.05em;
    font-weight: 700;
  }

  p {
    margin: 0;
    opacity: 0.82;
    line-height: 1.7;
  }

  @media (max-width: 680px) {
    .grid {
      grid-template-columns: 1fr;
    }
  }
</style>
